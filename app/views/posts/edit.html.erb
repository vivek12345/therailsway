<% provide(:title,'Edit Post') %>
<div class="row">
	<div class="span6" style="float:left">
		<%=form_for @post do |f|%>
		<%=f.label :title %>
		<%=f.text_field :title %>
		<%=f.label :body %>
		<%=tinymce%>
		<%=f.text_area :body,rows:'25',cols:'20',:class=>"tinymce" %>
		<%=f.label :ToDisplay %>
		<%=f.text_area :showpost,rows:'15',cols:'20' %>
		
		<%= f.attachinary_file_field :avatar %>
		<%=f.submit "Save changes",class:'btn btn-large btn-primary' %>
		<%end%>
	</div>
</div>