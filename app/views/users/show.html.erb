<% provide(:title,@user.name) %>
<%flash.each do|key,value|%>
<div class="alert alert-<%=key%>"><%=value%></div>
<%end%>
<div class="row">
	<aside class="span4">
		<section>
			<!--<h1><%=gravatar_for @user%></h1>-->
			<h1>
			<%= cl_image_tag(@user.avatar.path,class:'gravatar') %>
			</h1>
			<h1><%=@user.name%></h1>

			
		</section>
		<section>
        <%= render 'shared/stats' %><br>
        <%= render 'follow_form' if signed_in? %>
      </section>
	</aside>
    
	<div class="span8">
		<% if @user.posts.any? %>
			<h3 style="padding-left:20px">Microposts:(<%=@user.posts.count %>)</h3>
			<ol class="microposts">
				<%=render @posts %>
			</ol>
			<%= will_paginate @posts %>
    	<% end %>
    </div>


</div>
